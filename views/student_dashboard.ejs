<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Student Dashboard</title>
    <style>
        /* Simple styling for readability */
        table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        .btn-danger { background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer; }
        .btn-success { background-color: #4CAF50; color: white; border: none; padding: 5px 10px; cursor: pointer; }
    </style>
</head>
<body>
    <h1>Welcome, <%= user.full_name %></h1>
    
    <p><a href="/logout">Logout</a></p>

    <h3>Total Credits: <%= total_credits %> / 24</h3>

    <hr>

    <h2>Your Registered Courses</h2>
    <% if (registered_courses.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Credits</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% registered_courses.forEach(course => { %>
                    <tr>
                        <td><%= course.course_id %></td>
                        <td><%= course.course_name %></td>
                        <td><%= course.credits %></td>
                        <td>
                            <form action="/student/drop" method="POST">
                                <input type="hidden" name="course_id" value="<%= course.course_id %>">
                                <button type="submit" class="btn-danger">Drop</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>You are not registered for any courses yet.</p>
    <% } %>

    <hr>

    <h2>Available Courses</h2>
    <% if (available_courses.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Credits</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% available_courses.forEach(course => { %>
                    <tr>
                        <td><%= course.course_id %></td>
                        <td><%= course.course_name %></td>
                        <td><%= course.credits %></td>
                        <td>
                            <form action="/student/register" method="POST">
                                <input type="hidden" name="course_id" value="<%= course.course_id %>">
                                <button type="submit" class="btn-success">Register</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No other courses available.</p>
    <% } %>

</body>
</html>